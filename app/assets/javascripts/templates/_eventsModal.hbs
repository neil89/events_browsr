<div id="more-info-event" class="modal hide fade" tabindex="-1" role="dialog">
  {{#with controller.currentEvent}}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>{{title}}</h3>
  </div>
  <div class="modal-body">
      <div>
        <label for="date-label" class="control-label">Fecha</label>
        <span>{{date}} <span class="days-left">({{daysLeft date}})</span></span>
      </div>

      <div>
        <label for="place-label" class="control-label">Lugar</label>
        {{#if place}}        
          <span>{{place}}</span>
        {{else}}
          <span>Lugar no especificado</span>
        {{/if}}
      </div>

      <div>
        <label for="description" class="control-label">Descripción</label>
        {{#if description}}
          <span>{{description}}</span>
        {{else}}
          <span>Sin descripción</span>
        {{/if}}
      </div>

      <div>
        <label for="created-by" class="control-label">Creado por</label>
        <span>{{user.fullName}}</span>
      </div>

      <div>
        <label for="attending-people" class="control-label">Número de asistentes</label>
        <span>*</span>
      </div>
  </div>
  <div class="modal-footer">
    <div>
      <button class="btn btn-success" data-dismiss="modal">Cerrar</button>
    </div>
  </div>
  {{/with}}
</div>